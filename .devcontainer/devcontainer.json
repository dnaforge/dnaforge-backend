{
	"name": "DNAforge Backend Dev Container",
	"build": {
		"context": "..",
		"dockerfile": "./Dockerfile",
		"args": {
			// Set to true to enable CUDA support for development
			// Requires nvidia-docker and CUDA-capable GPU
			"CUDA": "false"
		}
	},
	// Uncomment the runArgs below ONLY if CUDA is set to true above
	// "runArgs": [
	// 	"--runtime=nvidia"
	// ],
	"remoteUser": "ubuntu",
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"configureZshAsDefaultShell": true,
			"username": "ubuntu"
		},
		"ghcr.io/devcontainers/features/java:1": {
			"version": "21",
			"installGradle": true,
			"gradleVersion": "9.1.0"
		}
	}
}